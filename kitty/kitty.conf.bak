#
# BEGIN_KITTY_THEME
# Catppuccin-Mocha
include current-theme.conf
# END_KITTY_THEME
#
#
# This mapping can mess up with vim by accident
# map ctrl+k combine : clear_terminal scrollback active : send_text normal \x0c

# To change theme, run: kitty +kitten themes

map ctrl+tab send_text normal,application \x1b[9;5u

# For supported fonts: `kitty list-fonts`

font_family  Fira Code Nerd Font Mono

# font_family  CaskaydiaCove Nerd Font Mono
# bold_family  CaskaydiaCove Nerd Font Mono
# italic_family CaskaydiaCove Nerd Font Mono
# bold_italic_family CaskaydiaCove Nerd Font Mono

macos_thicken_font 0.1

# Default is to confirm before closing (value = -1)
confirm_os_window_close 0
